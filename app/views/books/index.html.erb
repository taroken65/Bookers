<h1>Books</h1>
<table>
<tr>
<th>Title</th>
<th>Body</th>
</tr>
<% @books.each do |book| %>
<tr>
<th><%= book.title %></th>
<th><%= book.body %></th>
<th><%= link_to "show", book_path(book.id) %></th>
<th>Show</th>
<th>Show</th>
</tr>
<% end %>
</table>


<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'create book' %>

<% end %>
