<h1>Books</h1>
<% @books.each do |book| %>
<table>
<tbody>
<tr>
<th>Title</th>
<th>Body</th>
</tr>
<tr>
<th><%= book.title %></th>
<th><%= book.body %></th>
</tr>
</tbody>
</table>

<% end %>

<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Bodya</h4>
  <%= f.text_area :body %>
  <%= f.submit 'create book' %>

<% end %>
